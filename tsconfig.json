{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["es6"],
      "allowJs": true,
      "outDir": "./dist",
      "rootDir": "./",
      "typeRoots": ["./src/@types", "node_modules/@types"],
      "removeComments": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
  }
  